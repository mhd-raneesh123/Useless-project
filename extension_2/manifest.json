{
  "manifest_version": 3,
  "name": "Scrollbar Sentience Analyzer",
  "version": "1.0",
  "description": "Adds emotion to scrollbars based on scrolling behavior.",
  "icons": {
    "48": "icon.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "permissions": [
    "activeTab",
    "scripting"
  ]
}
